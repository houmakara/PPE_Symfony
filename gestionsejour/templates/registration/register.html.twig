{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
 	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-md-7 mx-auto">
                    <div class="text-center mb-4">
						<img class="mb-4" src="/img/logo.png" alt="logo" width="72" height="72" margin="50px">
						<h1 class="h3 mb-3 font-weight-normal">Création d'un compte</h1>
	 				{{ form_start(registrationForm) }}
                    {{form_row(registrationForm.email,{ 'attr': {'class': "form-control"} })}}	<br>						
                    {{ form_row(registrationForm.plainPassword,{'attr': {'class':'form-control'}})}}<br>
                    {{ form_row(registrationForm.role, {'attr': {'class':'form-control'}})}}<br>
                    {{ form_row(registrationForm.service, {'attr': {'class':'form-control'}})}}<br>
                    {{ form_row(registrationForm.agreeTerms) }}
                   <button type="submit" class="btn">Enregistrer</button>
                    {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}